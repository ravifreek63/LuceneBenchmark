<?xml version="1.0" encoding="UTF-8"?>
<project name="LuceneBenchmark" default="compile" basedir =".">
<description> Build file for Lucene Benchmark </description>

<property name="src" value="src"></property>
<property name="build" value="build"></property>
<property name="dist" value="dist"></property>
<property name="jars" value="jars"></property>

<target name ="createDir" description="creates the necessary directories if they do not exist">
		<mkdir dir="${dist}"/>
		<mkdir dir="${build}"/>
</target>

<target name="compile" depends="createDir" description ="compile task">
	<javac srcdir="${src}" destdir="${build}">
	   <classpath>
               <fileset dir="${jars}">
                  <include name="**/*.jar" />
               </fileset>
         </classpath>
	</javac>
</target>

<target name="clean" description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
</target>

</project>